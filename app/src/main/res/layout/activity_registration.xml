<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kneedleapp.RegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_text" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/textview_error_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:paddingTop="@dimen/margin_5"
                android:text="@string/warning_register"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_15"
                android:visibility="gone" />

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/ic_name_white"
                android:drawablePadding="@dimen/margin_15"
                android:hint="@string/name"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@null"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="@dimen/margin_15"
                android:hint="User Name"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@null"
                android:drawableLeft="@drawable/ic_pass_white"
                android:drawablePadding="@dimen/margin_15"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/txt_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@null"
                android:drawableLeft="@drawable/ic_calender_white"
                android:drawablePadding="@dimen/margin_15"
                android:focusable="false"
                android:hint="Month / Day / Year"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_25"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/ll_homme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_homme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_homme_red" />

                    <TextView
                        android:id="@+id/txt_homme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homme"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_18" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_femme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_20"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_femme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_5"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_femme_white" />

                    <TextView
                        android:id="@+id/txt_femme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/femme"
                        android:textAllCaps="true"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_18" />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:src="@drawable/ic_dropdown_white" />

                <Spinner
                    android:id="@+id/spinner_profile_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:popupBackground="@color/spinner_background" />
            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/btn_let_me_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:background="@color/colorAccent"
                android:text="@string/let_me_in"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_18" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
