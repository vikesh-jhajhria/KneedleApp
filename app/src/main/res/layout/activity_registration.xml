<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kneedleapp.RegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_text" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/margin_35"
            android:paddingRight="@dimen/margin_35"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_15"
                android:paddingTop="@dimen/margin_15"
                android:text="@string/warning_register"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_15" />

            <EditText
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/ic_name_white"
                android:drawablePadding="@dimen/margin_15"
                android:hint="@string/name"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/txt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@null"
                android:drawableLeft="@drawable/ic_username"
                android:drawablePadding="@dimen/margin_15"
                android:hint="User Name"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@null"
                android:drawableLeft="@drawable/ic_pass_white"
                android:drawablePadding="@dimen/margin_15"
                android:hint="Password"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/txt_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@null"
                android:drawableLeft="@drawable/ic_dob"
                android:drawablePadding="@dimen/margin_15"
                android:hint="Month / Day / Year"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_male"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/homme"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/margin_10"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_18"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_30"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_female"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/femme"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/margin_10"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/font_18"/>
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@null"
                android:drawableRight="@drawable/ic_arrow_down"
                android:drawablePadding="@dimen/margin_15"
                android:hint="PROFILE TYPE"
                android:inputType="textCapWords|textPersonName"
                android:maxLines="1"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_15"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/font_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <Button
                android:id="@+id/btn_let_me_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_30"
                android:background="@color/colorAccent"
                android:text="@string/let_me_in"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/font_18" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
