<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgcircle_user"
        android:layout_width="@dimen/list_profile_image_height"
        android:layout_height="@dimen/list_profile_image_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:src="@drawable/default_feed" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/imgcircle_user"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/margin_15" />
    <TextView
        android:id="@+id/txt_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_3"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/txt_username"
        android:maxLines="2"
        android:text=""
        android:textSize="@dimen/margin_15" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/font_14"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:textColor="@color/gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:layout_below="@+id/imgcircle_user"
        android:background="#edebeb" />


</RelativeLayout>