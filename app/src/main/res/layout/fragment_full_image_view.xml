<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.kneedleapp.fragment.FullImageViewFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_full_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:transitionName="image" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_popup"
            android:layout_width="@dimen/margin_60"
            android:layout_height="@dimen/margin_60"
            android:layout_alignParentBottom="true"
            android:transitionName="userimage"
            android:layout_margin="@dimen/margin_16"
            android:src="@drawable/shahrukhkhan" />


        <TextView
            android:id="@+id/txt_user_name_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:transitionName="title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_45"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@+id/img_popup"
            android:text="aman"
            android:textColor="#ffffff"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/img_heart_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@+id/img_popup"
            android:transitionName="heart"
            android:src="@drawable/heart" />

        <TextView
            android:id="@+id/txt_likes_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_toRightOf="@+id/img_heart_pop"
            android:text="5"
            android:textColor="#ffffff"
            android:transitionName="likes"
            android:textSize="@dimen/font_15" />


    </RelativeLayout>

</FrameLayout>
